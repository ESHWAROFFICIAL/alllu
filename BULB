HTML



div{
  text-align:center;
 
}
button {
  font-size: 22px;
  background: dodgerblue;
  color: white;
  border-radius:30px;
  border:none;
  padding:10px 20px;
}



CSS



//Here is the link for the bulb when the button is turn on.
//https://image.flaticon.com/icons/svg/702/702797.svg
document.getElementById("turnon").onclick=()=>{document.getElementById("image1").src="https://image.flaticon.com/icons/svg/702/702797.svg"};
document.getElementById("turnoff").onclick=()=>{document.getElementById("image1").src="https://image.flaticon.com/icons/svg/702/702814.svg"};




